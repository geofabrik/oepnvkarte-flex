    properties:
      minzoom: 8
      maxzoom: 9
    advanced: {}

  - id: area1
    name: area1
    class: area
    geometry: polygon
    <<: *extents
    Datasource:
      <<: *osm2pgsql
      table: (SELECT geom, type::text, type as "order" FROM oepnv_largeareas ORDER
        BY "order" ASC) AS area
    properties:
      minzoom: 10
      maxzoom: 11
    srs-name: '900913'
    srs: +proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0
      +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over
    advanced: {}

  - id: area2
    name: area2
    class: area
    geometry: polygon
    <<: *extents
