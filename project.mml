      maxzoom: 7
    advanced: {}

  - id: area0
    name: area0
    class: area
    geometry: polygon
    <<: *extents
    Datasource:
      <<: *osm2pgsql
      table: (SELECT geom, type::text, type as "order" FROM oepnv_verylargeareas ORDER
