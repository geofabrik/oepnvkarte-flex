  - id: platformlabel
    name: platformlabel
    class: platform label
    geometry: point
    <<: *extents
    Datasource:
      <<: *osm2pgsql
      table: (SELECT name, ref, CASE ST_GeometryType(geom) WHEN 'ST_Point' THEN geom
        WHEN 'ST_Linestring' THEN ST_LineInterpolatePoint(geom, 0.5) ELSE st_pointonsurface(geom)
