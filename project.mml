# Various parts to be included later on
_parts:
  srid: &srid "3857"
  srs: &srs "+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over"
  srs_wsg84: &srs_wsg84 "+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs"
  world: &world
    - -180
    - -85.05112877980659
    - 180
    - 85.05112877980659
  extents: &extents
    extent: *world
    srs-name: *srid
    srs: *srs
  extents_wsg84: &extents_wsg84
    extent: *world
    srs-name: autodetect
    srs: *srs_wsg84
  osm2pgsql: &osm2pgsql
    type: "postgis"
    dbname: "gis"
    key_field: ""
    geometry_field: "geom"
    srid: *srid
    extent: "-20037508,-20037508,20037508,20037508"


name: oepnvkarte
description: ''
bounds: *world
srs: *srs
center: [0, 0, 2]
format: png
interactivity: false
minzoom: 0
maxzoom: 22
scale: 1
metatile: 2



Stylesheet:
  - style.mms
  - ground.mms
  - road.mms
  - poi.mms
  - places.mms
  - transport.mms
  - rail.mms

